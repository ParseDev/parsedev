<div class="mt-10">
  <%= form_with url: company_invite_path(current_user.company), method: :post, local: true, class: "w-full max-w-md mx-auto p-4 bg-white shadow-md rounded-md" do |form| %>
    <div class="flex flex-col space-y-4">
      <div class="field">
        <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <div class="actions">
        <%= form.submit "Invite User", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>
</div>
